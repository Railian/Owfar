<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="ContentDescription,RtlHardcoded,SmallSp">

    <android.support.v7.widget.CardView
        android:id="@+id/item_stickers_board_page_premium_tile_cvCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="2dp"
        app:cardBackgroundColor="@color/colorLightGray"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_stickers_board_page_premium_tile_ivCover"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:padding="4dp"
                tools:src="@drawable/temp_avatar" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="2dp" />

            <TextView
                android:id="@+id/item_stickers_board_page_premium_tile_tvSetName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:paddingLeft="8dp"
                android:paddingRight="4dp"
                android:textColor="@color/text_color_primary"
                android:textSize="12sp"
                tools:text="Set Name" />

            <TextView
                android:id="@+id/item_stickers_board_page_premium_tile_tvCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:paddingLeft="8dp"
                android:paddingRight="4dp"
                android:textColor="@color/text_color_primary"
                android:textSize="10sp"
                tools:text="34 stickers" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>