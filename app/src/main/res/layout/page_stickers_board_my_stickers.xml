<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/page_stickers_board_my_stickers_tlTabs"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tabGravity="fill" android:overScrollMode="never"
        app:tabMode="scrollable" />

    <android.support.v4.view.ViewPager android:overScrollMode="never"
        android:id="@+id/page_stickers_board_my_stickers_vpStickersGroups"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>