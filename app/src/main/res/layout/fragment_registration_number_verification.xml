<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:weightSum="6"
    tools:context=".ui.registration.RegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView    android:id="@+id/fragment_registration_number_verification_tvSendCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/fragment_registration_number_verification_tvSendCode" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <Button
            android:id="@+id/fragment_registration_number_verification_btSendCode"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@drawable/bg_registration_bt"
            android:gravity="center"
            android:text="@string/fragment_registration_number_verification_btSendCode"
            android:textColor="@android:color/white" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <TextView
            android:id="@+id/fragment_registration_number_verification_tvEditPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/fragment_registration_number_verification_tvEditPhoneNumber"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>