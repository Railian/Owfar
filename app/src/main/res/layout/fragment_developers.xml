<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.owfar.android.ui.developers.DevelopersFragment">

    <Button
        android:id="@+id/fragment_developers_btSaveToDatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save to database" />

    <Button
        android:id="@+id/fragment_developers_btGetFromDatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get from database" />

    <TextView
        android:id="@+id/fragment_developers_tvOutput"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="output" />

</LinearLayout>
